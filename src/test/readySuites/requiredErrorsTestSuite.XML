<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="RequiredErrorsTest suite">

    <listeners>
        <listener class-name="CustomListener"/>
        <listener class-name="CustomListenerForSuite"/>
    </listeners>

    <test name="RequiredErrorsTest" verbose="1">
        <parameter name="normalUserForNegative" value="src/test/data/normalUserForNegative.json"/>
        <parameter name="requiredUser" value="src/test/data/requiredUser.json"/>
        <classes>
            <class name="RequiredErrorsTest">
                <methods>
                    <include name="checkRequiredErrors" />
                </methods>
            </class>
        </classes>
    </test>

</suite>